generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Member {
  idx       Int      @id @default(autoincrement())
  id        String   @unique @db.VarChar(30)
  password  String   @db.VarChar(200)
  memos     Memo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Memo {
  idx       Int      @id @default(autoincrement())
  memo      String
  member    Member   @relation(fields: [memberIdx], references: [idx])
  memberIdx Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([memberIdx])
}
